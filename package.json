{
  "name": "acme-accounting",
  "private": true,
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start --watch",
    "start:nowatch": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "migrate": "sequelize db:migrate",
    "migrate:create": "sequelize db:create",
    "postinstall": "node generate.js",
    "db:migrate:test": "NODE_ENV=test sequelize db:migrate",
    "db:create:test": "NODE_ENV=test sequelize db:create",
    "db:reset": "sequelize db:migrate:undo:all"
  },
  "dependencies": {
    "@nestjs/common": "11.0.12",
    "@nestjs/core": "11.0.13",
    "@nestjs/platform-express": "11.0.13",
    "@nestjs/sequelize": "11.0.0",
    "pg": "8.14.1",
    "reflect-metadata": "0.2.2",
    "sequelize": "^6.37.7",
    "sequelize-typescript": "2.1.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.24.0",
    "@nestjs/cli": "11.0.6",
    "@nestjs/schematics": "11.0.3",
    "@nestjs/testing": "11.0.13",
    "@swc/cli": "0.6.0",
    "@swc/core": "1.11.16",
    "@types/express": "5.0.1",
    "@types/jest": "29.5.14",
    "@types/node": "22.14.0",
    "@types/sequelize": "4.28.20",
    "@types/supertest": "6.0.3",
    "eslint": "9.24.0",
    "eslint-config-prettier": "10.1.1",
    "eslint-plugin-prettier": "5.2.6",
    "globals": "16.0.0",
    "jest": "29.7.0",
    "prettier": "3.5.3",
    "sequelize-cli": "^6.6.2",
    "source-map-support": "0.5.21",
    "supertest": "7.1.0",
    "ts-jest": "29.3.1",
    "ts-loader": "9.5.2",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.8.3",
    "typescript-eslint": "8.29.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./tests/setupJest.ts"
    ]
  }
}
